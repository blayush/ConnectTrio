<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="358dp"
        android:layout_height="372dp"
        android:layout_margin="7dp"
        android:background="@drawable/board4"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:rowCount="3">


        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="90dp"
            android:layout_height="86dp"

            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:onClick="dropin"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginLeft="28dp"
            android:layout_marginTop="23dp"
            android:onClick="dropin"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:onClick="dropin"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="97dp"
            android:layout_height="90dp"

            android:layout_marginLeft="06dp"
            android:layout_marginTop="23dp"
            android:onClick="dropin"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginLeft="28dp"
            android:layout_marginTop="25dp"
            android:onClick="dropin"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:onClick="dropin"
            android:rotationY="-3600"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="97dp"
            android:layout_height="90dp"

            android:layout_marginLeft="06dp"
            android:layout_marginTop="25dp"
            android:contentDescription="TODO"
            android:onClick="dropin"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="96dp"
            android:layout_height="86dp"

            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:onClick="dropin"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="96dp"
            android:layout_height="86dp"

            android:layout_marginStart="06dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:onClick="dropin"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="157dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:text="Connect-3 "
        android:textColor="#F4D436"
        android:textColorHighlight="#FFEB3B"
        android:textColorHint="#FF5722"
        android:textColorLink="#F44336"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/playagainbutton"
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:onClick="PlayAgain"
        android:text="Play Again"
        android:visibility="invisible"
        app:backgroundTint="#4CAF50"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RESULTTEXT"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/RESULTTEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="#FF5722"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.141" />

    <FrameLayout
        android:layout_width="393dp"
        android:layout_height="815dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/startimage"
            android:layout_width="500dp"
            android:layout_height="900dp"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingBottom="200dp"
            app:srcCompat="@drawable/connect3logo" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>